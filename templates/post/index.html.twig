{% extends 'base.html.twig' %}
{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}




    <center>
        <h1>All Your Ads</h1>
    </center>



    <div class="row" >
        <div class="row gap-3">
            {% for post in posts %}
                <div class="card p-3 border bg-light" style="width: 18rem; box-sizing: border-box">
                    <img src="{{ asset('uploads/' ~ post.image1 )}}"  class="card-img-top img-responsive mw-100 mh-100" alt="..." >
                    <div class="card-body">
                        <h5 class="card-title">{{ post.model }}</h5>

                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Rs.{{ post.price }}</li>
                        <li class="list-group-item">{{ post.city }}</li>
                        <li class="list-group-item">{{ post.ContactNumber }}</li>
                    </ul>
                    <div class="card-body">
                        <a href="{{ path('post.show', {id:post.id}) }}" class="btn btn-success">View</a>
                        <a href="{{ path('post.delete', {id:post.id}) }}" class="btn btn-danger">Delete</a>
                        <a href="{{ path('post.post_update', {id:post.id}) }}" class="btn btn-primary">Update</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>








{% endblock body %}
