{% extends 'newfrontbase.html.twig' %}



{% block body %}
    <link rel="stylesheet" href="{{ asset('./styles/viewproduct/css/all.min.css') }}">
    <link rel="stylesheet" href="{{ asset('./styles/viewproduct/css/style.css') }}">
    <div class="container">
        <div class="box">
            <div class="images">
                <div class="img-holder active">
                    <img src="{{ asset('uploads/' ~ post.image1 )}}">
                </div>
                <div class="img-holder">
                    <img src="{{ asset('uploads/' ~ post.image2 )}}">
                </div>
                <div class="img-holder">
                    <img src="{{ asset('uploads/' ~ post.image3 )}}">
                </div>
                <div class="img-holder">
                    <img src="{{ asset('uploads/' ~ post.image4 )}}">
                </div>
            </div>
            <div class="basic-info">
                <h1>{{ post.model }}</h1>

                <span>Rs.{{ post.price }}</span>
                <!-- <div class="options">
                    <a href="#">Buy It Now</a>
                    <a href="#">Add to Cart</a>
                </div> -->
            </div>

            <div class="description">
                <ul class="features">
                    <li><i class="fa fa-user" aria-hidden="true"></i>{{ post.SellerName }}</li>
                    <li><i class="fa fa-phone"></i>{{ post.ContactNumber }}</li>
                    <li><i class="fa fa-map-pin"></i>{{ post.city }}</li>

                </ul>
                <p>{{ post.description }}</p>
                <ul class="social">
                    <li><a href="#"><i class="fa-brands fa-facebook-f"></i></a></li>
                    <li><a href="#"><i class="fa-brands fa-instagram"></i></a></li>
                    <li><a href="#"><i class="fa-brands fa-twitter"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
